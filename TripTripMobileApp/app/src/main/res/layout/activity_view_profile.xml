<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mountains"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/iv_view_mountains"
        android:layout_width="1666dp"
        android:layout_height="1468dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.377"
        app:srcCompat="@drawable/mountains" />

    <TextView
        android:id="@+id/tv_view_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/menu_black"
        android:backgroundTint="@color/menu_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:scaleType="center"
        app:backgroundTint="#85252525"
        app:elevation="0dp"
        app:fabCustomSize="50dp"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="@+id/tv_view_name"
        app:layout_constraintStart_toStartOf="@+id/fab_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="20dp"
        app:srcCompat="@drawable/edit"
        app:tint="#FFFFFF" />

    <TextView
        android:id="@+id/tv_view_bday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="date"
        android:text="@string/input_birthday"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_view_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_view_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_name" />

    <TextView
        android:id="@+id/tv_view_label_bday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:text="@string/input_birthday"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tv_view_bday"
        app:layout_constraintEnd_toEndOf="@+id/tv_view_bday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_view_bday"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_name"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_view_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:text="@string/input_email"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tv_view_email"
        app:layout_constraintEnd_toEndOf="@+id/tv_view_email"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_view_email"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_bday"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_view_label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:text="@string/input_name"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tv_view_name"
        app:layout_constraintEnd_toEndOf="@+id/tv_view_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_view_name" />

    <TextView
        android:id="@+id/tv_view_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="35dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/input_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/hint_gray"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_view_bg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_view_bg"
        app:layout_constraintTop_toBottomOf="@+id/iv_user" />

    <TextView
        android:id="@+id/tv_view_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/input_email"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_view_bday"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_view_bday"
        app:layout_constraintTop_toBottomOf="@+id/tv_view_bday" />

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="108dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_view_bg"
        app:srcCompat="@drawable/user" />

</androidx.constraintlayout.widget.ConstraintLayout>